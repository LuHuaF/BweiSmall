<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.umeng.soexample.bweismall">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/myapp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/myapp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LoginActivity">
            <!-- 禁止横竖屏 -->
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.SouActivity" />
        <activity android:name=".ui.ZiLiaoActivity"/>
        <activity android:name=".ui.XiangQingActivity"/>
        <activity android:name=".ui.SubActivity"/>
        <activity android:name=".ui.XinZengActivity"/>
        <activity android:name=".ui.ShouHuoActivity"/>
    </application>

</manifest>