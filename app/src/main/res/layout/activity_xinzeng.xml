<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/my_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_40"
        android:text="新增收货地址"
        android:textColor="#666666"
        android:textSize="@dimen/sp_16" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_250"
        android:layout_below="@+id/my_info"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_12">

        <LinearLayout
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_250"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="收件人："
                    android:textColor="#656666"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/add_person"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@null" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:background="#f2f2f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机号码："
                    android:textColor="#656666"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/add_phone"
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@null" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:background="#f2f2f2" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_15">

                <TextView
                    android:id="@+id/add_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所在地区："
                    android:layout_centerVertical="true"
                    android:textColor="#656666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/add_local"
                    android:layout_toLeftOf="@+id/add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/add_text" />


                <ImageView
                    android:id="@+id/add_image"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/sanjiliandong"/>
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#f2f2f2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="详细地址："
                    android:textColor="#656666"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/add_content"
                    android:layout_width="match_parent"
                    android:lines="2"
                    android:maxLength="30"
                    android:textSize="@dimen/sp_12"
                    android:layout_height="@dimen/dp_56"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@null" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:background="#f2f2f2" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/get_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邮箱编码："
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textColor="#656666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:layout_toRightOf="@+id/get_text"
                    android:id="@+id/add_email"
                    android:textSize="@dimen/sp_12"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@null" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_272"
                android:layout_height="@dimen/dp_1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_5"
                android:background="#f2f2f2" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/add_save"
        android:layout_width="@dimen/dp_116"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="#ff5e70"
        android:text="保存并提交"
        android:textColor="#fff"
        android:textSize="@dimen/dp_12" />

</RelativeLayout>