<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <RelativeLayout

        android:id="@+id/shop_footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_45"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:layout_centerVertical="true"
            android:id="@+id/shop_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_6"
            android:id="@+id/shop_he"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/shop_all"
            android:text="合计："
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView

            android:layout_marginTop="@dimen/dp_6"
            android:id="@+id/shop_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/shop_he"
            android:text="￥0.0"
            android:textColor="#ff0606"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/shop_close"
            android:layout_width="@dimen/dp_118"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentRight="true"
            android:background="#ff5e70"
            android:text="去结算"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shop_recy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/shop_footer"
        android:layout_marginTop="@dimen/dp_20"></android.support.v7.widget.RecyclerView>
</RelativeLayout>