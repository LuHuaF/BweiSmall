<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_5"
    android:paddingRight="@dimen/dp_5">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/dp_151"
        android:layout_height="@dimen/dp_174"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/sousuo_shap"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/Pin_Image"
            android:layout_width="@dimen/dp_131"
            android:layout_height="@dimen/dp_102"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/Pin_Js"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:lines="1"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/Pin_Jg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:textColor="#ff0000"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>